@model Employee.Models.EmployeeSearchViewModel

@{ Layout = null; }

<div class="row">
    <div class="col-md-12">
        <form asp-action="SearchView" onsubmit="return jQueryAjaxsearch(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EmployeeLastName" class="control-label"></label>
                        <input asp-for="EmployeeLastName" class="form-control" />
                        <span asp-validation-for="EmployeeLastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EmployeePhone" class="control-label"></label>
                        <input asp-for="EmployeePhone" mask="(999) 999-9999" class="form-control" />
                        <span asp-validation-for="EmployeePhone" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row hide" id="view-search-notfound">
    <div class="col-md-12">
        <p>not found</p>
    </div>
</div>
<div  id="view-search">
    </div>
